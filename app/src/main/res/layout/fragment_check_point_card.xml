<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <!-- A CardView-->
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/fragment_check_point_card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/fragment_check_point_card_title_image"
                android:src="@drawable/placeholder_logo"
                android:scaleType="centerCrop"
                android:contentDescription="Title Image View" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical|center_horizontal"
                android:background="#50a4fd">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Event Card Title"
                    android:id="@+id/fragment_check_point_card_title_text"
                    android:textColor="#ffffff"
                    android:shadowColor="#96000000" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#464646">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/fragment_check_point_card_camera_button"
                    android:src="@drawable/abc_btn_rating_star_off_mtrl_alpha"
                    android:scaleType="center"
                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:contentDescription="Camera" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/fragment_check_point_card_check_in_button"
                    android:layout_weight="1"
                    android:src="@drawable/abc_btn_check_to_on_mtrl_015"
                    android:scaleType="center"
                    android:adjustViewBounds="false"
                    android:baselineAlignBottom="false"
                    android:contentDescription="Check In" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/fragment_check_point_card_share_button"
                    android:scaleType="center"
                    android:src="@drawable/abc_ic_menu_share_mtrl_alpha"
                    android:layout_weight="1"
                    android:contentDescription="Share" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description Text"
                android:id="@+id/fragment_check_point_card_description_text"
                android:layout_margin="10dp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>



</LinearLayout>
