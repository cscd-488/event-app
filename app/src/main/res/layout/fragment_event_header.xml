<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/fragment_event_header_location_pin"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_place_24dp"
        android:tint="@color/medium_gray"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spokane WA"
        android:id="@+id/fragment_event_header_location_text"
        android:layout_alignTop="@+id/fragment_event_header_location_pin"
        android:layout_toRightOf="@+id/fragment_event_header_location_pin"
        android:layout_toEndOf="@+id/fragment_event_header_location_pin"
        android:textSize="@dimen/medium_text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WITHIN n MILES"
        android:id="@+id/textView2"
        android:layout_below="@+id/fragment_event_header_location_text"
        android:layout_toRightOf="@+id/fragment_event_header_location_pin"
        android:layout_toEndOf="@+id/fragment_event_header_location_pin"
        android:layout_marginTop="5dp"
        android:textSize="@dimen/smaller_text" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/fragment_event_header_edit_image_button"
        android:layout_alignTop="@+id/fragment_event_header_location_text"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_mode_edit_24dp"
        android:layout_marginRight="30dp"
        android:tint="@color/medium_gray" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_event_header_done_image_button"
        android:layout_below="@+id/fragment_event_header_location_pin"
        android:layout_alignLeft="@+id/fragment_event_header_location_pin"
        android:layout_alignStart="@+id/fragment_event_header_location_pin"
        android:src="@drawable/placeholder_logo"
        android:background="@drawable/rounded_corner_gradient_button"
        android:layout_alignRight="@+id/fragment_event_header_edit_image_button"
        android:layout_alignEnd="@+id/fragment_event_header_edit_image_button"
        android:text="Done"
        android:textColor="#ffffff"
        android:textSize="@dimen/medium_text" />

</RelativeLayout>